{
  "name": "meeting-coach-frontend",
  "version": "0.1.0",
  "private": true,
  "description": "React Native frontend for Teams Meeting Coach",
  "scripts": {
    "start": "METRO_PORT=${METRO_PORT:-8082} react-native start --port ${METRO_PORT:-8082}",
    "macos": "react-native run-macos",
    "test": "jest",
    "lint": "eslint .",
    "lint:check": "eslint . --max-warnings=0",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx}\"",
    "pretest": "npm run lint:check && npm run format:check",
    "prebuild": "npm run lint:check && npm run format:check",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "axios": "^1.12.2",
    "react": "18.2.0",
    "react-native": "0.73.11",
    "react-native-macos": "0.73.36",
    "reconnecting-websocket": "^4.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native-community/cli": "12.3.6",
    "@react-native/babel-preset": "0.73.21",
    "@react-native/eslint-config": "0.73.2",
    "@react-native/metro-config": "0.73.5",
    "@react-native/typescript-config": "0.73.1",
    "@testing-library/react-native": "^12.9.0",
    "babel-jest": "^30.2.0",
    "eslint": "^8.19.0",
    "husky": "^9.1.7",
    "jest": "^29.2.1",
    "lint-staged": "^16.2.6",
    "prettier": "^2.8.0",
    "react-native-dotenv": "^3.4.11",
    "react-test-renderer": "^18.2.0"
  },
  "engines": {
    "node": ">=18"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|reconnecting-websocket)/)"
    ],
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    }
  }
}
